<%- include("partials/header") %>


<div class="ui container">
	
	<h1>Edit <%= blogs.title %></h1>
	<form class="ui form" action= "/blogs/<%= blogs._id %>?_method=PUT" method= "POST">
	  <div class="field">
		<label>Title</label>
		<input type="text" name="blog[title]" value= <%= blogs.title %>>
	  </div>
	  <div class="field">
		<label>Image</label>
		<input type="text" name="blog[image]" value= <%= blogs.image %>>
	  </div>
	  <div class="field">
		<label>Blog Content</label>
		<textarea name= "blog[body]"><%= blogs.body %></textarea>
	  </div>
	  <button class="ui inverted blue button" type="submit">Submit</button>
	</form>
</div>

<%- include("partials/footer") %>