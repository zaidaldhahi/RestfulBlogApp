<%- include("partials/header") %>

<div class= "ui main text container segment">
<div class="ui unstackable items">
  <div class="item">
    <div class="image">
      <img class="ui medium rounded image" src="<%= blogs.image %>">
    </div>
    <div class="content">
      <a class="header"><%= blogs.title %></a>
      <div class="meta">
        <span><%= blogs.created.toDateString() %></span>
      </div>
      <div class="description">
        <p><%= blogs.body %></p>
      </div>
	  <a href= "/blogs/<%= blogs._id %>/edit"><button class="ui inverted orange button">Edit</button></a>
	  <form id="deletePost" action= "/blogs/<%= blogs._id %>?_method=DELETE" method= "POST"><button class="ui inverted red button">Delete</button></form>
    </div>
  </div>
</div>
</div>

<%- include("partials/footer") %>


